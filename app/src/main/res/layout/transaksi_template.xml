<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:id="@+id/relative">

    <TextView
        android:id="@+id/namaPelangganList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/waktuList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:59"
        android:layout_below="@id/namaPelangganList"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tglList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15-05-2023"
        android:layout_below="@id/namaPelangganList"
        android:layout_toRightOf="@id/waktuList"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/statusList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Belum Dibayar"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/mejaList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Meja 13"
        android:layout_below="@id/statusList"
        android:textColor="@color/black"/>

</RelativeLayout>